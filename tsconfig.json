{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "@contexts": ["./src/contexts/index.ts"],
      "@hooks": ["./src/hooks/index.ts"],
    }
  }
}
